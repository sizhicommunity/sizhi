{
  "compilerOptions": {
    "target": "es5",
    "sourceMap": true,
    "outDir": "dist",
    "lib": ["esnext", "dom"],
    "allowJs": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "module": "CommonJS",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "declaration": true,
  },
  "include": ["./src/**/*"]
}
